source 'http://rubygems.org'

gem 'figaro'
gem 'httparty'
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'pg'
gem 'rails', '3.2.12'
gem 'rsolr'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'annotate'
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'rspec-rails', ">= 2.0.0.beta"
  gem 'shoulda-matchers'
  gem 'simplecov'
  gem 'spork'
  gem 'quiet_assets'
end

group :production do

end
